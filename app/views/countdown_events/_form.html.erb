<%= form_with(model: countdown_event) do |form| %>
  <% if countdown_event.errors.any? %>
    <div style="color: red" class="p-0 m-0">
      <h2><%= pluralize(countdown_event.errors.count, "error") %> prohibited this countdown_event from being saved:</h2>

      <ul>
        <% countdown_event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.select :category_id, Category.all.pluck(:name, :id), { include_blank: 'Select category' } %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :target, style: "display: block" %>
    <%= form.datetime_field :target %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
